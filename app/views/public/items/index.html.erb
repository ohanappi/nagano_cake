<p>ジャンル検索</p>
<% @genres.each do |genre| %>

    <%= genre.name %>

<% end %>

<h3>側商品一覧</h3>

<% @items.each do |item| %>

<table>
    <th>
        <%= link_to item_path(item.id) do %>
        <%= item.name %>
        <% end %>
    </th>
    <td>
        <%= item.price %>
    </td>
</table>

<% end %>