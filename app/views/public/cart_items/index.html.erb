<p>ショッピングカート</p>
<p><%= link_to 'カートを空にする',destroy_all_cart_items_path,method: :delete %> </p>
<table>
    <tr>
        <th>商品名</th>
        <th>単価</th>
        <th>数量</th>
        <th>小計</th>
        <th></th>
    </tr>

<% @cart_items.each do |cart_item| %>
<% @total=@total + cart_item.subtotal %>
    <tr>
        <td><%= cart_item.item.name %></td>
        <td><%= cart_item.item.price %></td>
        <td><%= cart_item.amount %></td>
        <td><%= cart_item.item.price*cart_item.amount %></td>
        <td><%= link_to '削除',cart_item_path(cart_item.id), method: :delete %></td>
        <td><%= cart_item.customer_id %></td>

    </tr>
<% end %>

</table>
<p><%= link_to '買い物を続ける', items_path %></p>
<table>
    <tr>
        <th>合計金額</th>
        <td>¥<%= @total %></td>
    </tr>
</table>

<%= button_to '情報入力に進む',new_order_path,method: :get %>

