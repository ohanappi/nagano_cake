
<div class='container'>
    <div class='row'>
        <div class='col-lg-4'>
            <h5><%= @customers.last_name %><%= @customers.first_name %>さんの会員詳細</h5>
        </div>
    </div>
    
    <div class='row'>
        
        <div class='col-lg-7'>
            <table>
                <tr>
                    <th>会員ID</th>
                    <td><%= @customers.id %></td>
                </tr>
                
                <tr>
                    <th>氏名</th>
                    <td><%= @customers.last_name %><%= @customers.first_name %></td>
                </tr>
                
                <tr>
                    <th>フリガナ</th>
                    <td><%= @customers.last_name_kana %><%= @customers.first_name_kana %></td>
                </tr>
                
                <tr>
                    <th>郵便番号</th>
                    <td><%= @customers.postal_code %></td>
                </tr>
                
                <tr>
                    <th>住所</th>
                    <td><%= @customers.address %></td>
                </tr>
                
                <tr>
                    <th>電話番号</th>
                    <td><%= @customers.telephone_number %></td>
                </tr>
                
                <tr>
                    <th>メールアドレス</th>
                    <td><%= @customers.email %></td>
                </tr>
                
                <tr>
                    <th>会員ステータス</th>
                    <td>
                        <% if @customers.is_deleted %>
                         <p>無効</p>
                        <% else %>
                         <p>有効</p>
                        <% end %>
                        
                    
                    </td>
                </tr>
            </table>
            
            <%= link_to '編集する' , edit_admin_customer_path(@customers) %>
        </div>
    </div>
</div>