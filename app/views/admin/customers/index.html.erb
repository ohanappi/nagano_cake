<p>会員一覧</p>

<table>

<tr>
    <th>会員ID</th>
    <th>氏名</th>
    <th>メールアドレス</th>
    <th>ステータス</th>
</tr>

<% @customers.each do |customer| %>
<tr>
    <td><%= customer.id %></td>
    <td>
        <%= link_to admin_customer_path(customer.id) do %>
        <%= customer.last_name %><%= customer.first_name %>
        <% end %>
    </td>
    <td><%= customer.email %></td>
    <td>
        <% if customer.is_deleted %>
            <p>無効</p>
        <% else %>
            <p>有効</p>
        <% end %>
    </td>
</tr>
<% end %>
</table>