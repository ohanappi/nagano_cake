
<%= form_with model: @customers, url: admin_customer_path(@customers), method: :patch do |f| %>

<table>
    <tr>
        <th>会員ID</th>
        <td><%= @customers.id %></td>
    </tr>
    <tr>
        <th>氏名</th>
        <td> 
        <%= f.text_field :last_name %>
        <%= f.text_field :first_name %>
        </td>
    </tr>
    
    <tr>
        <th>フリガナ</th>
        <td> 
        <%= f.text_field :last_name_kana %>
        <%= f.text_field :first_name_kana %>
        </td>
    </tr>
    
    <tr>
        <th>郵便番号</th>
        <td><%= f.text_field :postal_code %></td>
    </tr>
    
    <tr>
        <th>住所</th>
        <td><%= f.text_area :address %></td>
    </tr>
    
    <tr>
        <th>電話番号</th>
        <td><%= f.text_field :telephone_number %></td>
    </tr>
    
    <tr>
        <th>会員ステータス</th>
        <td>
                <%= f.radio_button :is_deleted, 0 %>
                <%= f.label :is_deleted, "無効",value:true %>
                <%= f.radio_button :is_deleted, false %>
                <%= f.label :is_deleted, "有効",value:false %>
        </td>
    </tr>
    
    
    
</table>

<%= f.submit '編集内容を保存' %>



<% end %>