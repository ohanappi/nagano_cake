<p>商品詳細</p>
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <table>
                <tr>
                    <td>商品名</td>
                    <td><%= @item.name %></td>
                </tr>
                
                <tr>
                    <td>商品説明</td>    
                    <td><%= @item.introduction %></td>
                </tr>
                
                <tr>
                <td>ジャンル</td>
                <td><%= @item.genre.name %></td>
                </tr>
                
                <tr>
                    <td>税抜き価格</td>
                    <td><%= @item.price %></td>
                </tr>
                
                <tr>
                    <td><p>販売ステータス</p></td>
                    <td><% if @item.is_active %>
                        <p>販売中</p>
                        <% else %>
                        <p>販売停止</p>
                        <% end %>
                    
                    </td>
                </tr>
            </table>
            
            
        </div>
        <div class="row">
            <%= link_to '編集' , edit_admin_item_path(@item) %>
        </div>
    </div>
</div>
